{
  "expo": {
    "name": "LssGoo",
    "slug": "lssgoo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lssgoo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "LssGoo - Let's Go Explore. A premier travel agency app for unforgettable travel experiences.",
    "primaryColor": "#0ea5e9",
    "backgroundColor": "#ffffff",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "githubUrl": "https://github.com/lssgoo/lssgoo-app",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lssgoo.app",
      "buildNumber": "1",
      "infoPlist": {
        "CFBundleDisplayName": "LssGoo",
        "CFBundleName": "LssGoo",
        "NSLocationWhenInUseUsageDescription": "This app uses location to provide travel recommendations and nearby services.",
        "NSCameraUsageDescription": "This app uses camera to capture travel memories and upload photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses photo library to select and upload travel photos.",
        "NSContactsUsageDescription": "This app accesses contacts to share travel plans with friends and family."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.lssgoo.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro",
      "name": "LssGoo - Travel & Tours",
      "shortName": "LssGoo",
      "lang": "en",
      "scope": "/",
      "themeColor": "#0ea5e9",
      "backgroundColor": "#ffffff",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait"
    },
    "plugins": [
      [
        "expo-router",
        {
          "root": "./src/app"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/splash-icon.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Inter.ttf"]
        }
      ],
      "expo-localization",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "lssgoo",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}
